<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">
           
    <context:annotation-config/>
	<context:component-scan base-package="org.training.controllers"/>

	<bean id="defaultQaddonJavaScriptMessageResourceAccessor" parent="abstractJavaScriptMessageResourceAccessor">
		<property name="addOnName" value="qaddon"/>
	</bean>

	<bean id="defaultQaddonBeforeViewJsPropsHandlerAdaptee" parent="abstractBeforeViewJsPropsHandlerAdaptee" class="de.hybris.platform.addonsupport.interceptors.ExportJsPropertiesBeforeViewHandler">
		<property name="messageSource" ref="defaultQaddonJavaScriptMessageResourceAccessor"/>
	</bean>

	<bean id="getQaddonBeforeViewHandler" parent="beforeViewHandlerAdapter">
		<property name="adaptee">
			<ref bean="defaultQaddonBeforeViewJsPropsHandlerAdaptee"/>
		</property>
	</bean>
	<bean id="QaddonBeforeViewHandlerListMergeDirective" depends-on="beforeViewHandlersList" parent="listMergeDirective">
		<property name="add" ref="getQaddonBeforeViewHandler"/>
	</bean>

	<bean id="questionsBeforeViewHandler" class="org.training.interceptors.beforeview.QuestionsBeforeViewHandler">
		<constructor-arg ref="questionsProductFacade"/>
		<constructor-arg ref="productService"/>
	</bean>

	<bean id="getQaddonQuestionsBeforeViewHandler" parent="beforeViewHandlerAdapter">
		<property name="adaptee">
			<ref bean="questionsBeforeViewHandler"/>
		</property>
	</bean>

	<bean id="QaddonQuestionsBeforeViewHandlerListMergeDirective" depends-on="beforeViewHandlersList" parent="listMergeDirective">
		<property name="add" ref="getQaddonQuestionsBeforeViewHandler"/>
	</bean>

</beans>
