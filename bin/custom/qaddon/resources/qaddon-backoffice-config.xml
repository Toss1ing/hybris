<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<config xmlns="http://www.hybris.com/cockpit/config"
        xmlns:y="http://www.hybris.com/cockpit/config/hybris"
        xmlns:wz="http://www.hybris.com/cockpitng/config/wizard-config"
        xmlns:explorer-tree="http://www.hybris.com/cockpitng/config/explorertree"
        xmlns:editorArea="http://www.hybris.com/cockpitng/component/editorArea"
        xmlns:list-view="http://www.hybris.com/cockpitng/component/listView"
        xmlns:advanced-search="http://www.hybris.com/cockpitng/config/advancedsearch">

    <context component="explorer-tree" merge-by="module" module="qaddon">
        <explorer-tree:explorer-tree>
            <explorer-tree:navigation-node id="questions_addon_node">
                <explorer-tree:type-node code="Question" id="questions_node"/>
            </explorer-tree:navigation-node>
        </explorer-tree:explorer-tree>
    </context>

    <context type="Question" component="listview">
        <list-view:list-view>
            <list-view:column qualifier="product"/>
            <list-view:column qualifier="questionCustomer"/>
            <list-view:column qualifier="answerCustomer"/>
        </list-view:list-view>
    </context>

    <context type="Question" component="advanced-search">
        <advanced-search:advanced-search>
            <advanced-search:field-list>
                <advanced-search:field name="product" selected="true"/>
                <advanced-search:field name="questionCustomer" selected="true"/>
            </advanced-search:field-list>
        </advanced-search:advanced-search>
    </context>

    <context type="Question" component="create-wizard">
        <wz:flow id="QuestionWizard" title="create.question.title">
            <wz:prepare id="questionPrepare">
                <wz:initialize property="newQuestion" type="Question"/>
            </wz:prepare>
            <wz:step id="step1" label="create.question.step1.label">
                <wz:content id="step1.content">
                    <wz:property-list root="newQuestion">
                        <wz:property qualifier="code"/>
                        <wz:property qualifier="product"/>
                        <wz:property qualifier="question"/>
                        <wz:property qualifier="questionCustomer"/>
                        <wz:property qualifier="answer"/>
                        <wz:property qualifier="answerCustomer"/>
                    </wz:property-list>
                </wz:content>
                <wz:navigation id="step1.navigation">
                    <wz:cancel/>
                    <wz:done visible="true">
                        <wz:save property="newQuestion"/>
                    </wz:done>
                </wz:navigation>
            </wz:step>
        </wz:flow>
    </context>

    <context type="Question" component="editor-area">
        <editorArea:editorArea>
            <editorArea:essentials>
                <editorArea:essentialSection name="hmc.essential">
                    <editorArea:attribute qualifier="product"/>
                    <editorArea:attribute qualifier="questionCustomer"/>
                </editorArea:essentialSection>
            </editorArea:essentials>

            <editorArea:tab name="tab.qa">
                <editorArea:section name="section.qa">
                    <editorArea:attribute qualifier="question"/>
                    <editorArea:attribute qualifier="answer"/>
                    <editorArea:attribute qualifier="answerCustomer"/>
                    <editorArea:attribute qualifier="approved"/>
                </editorArea:section>
            </editorArea:tab>

            <editorArea:tab name="tab.admin">
                <editorArea:section name="section.admin">
                    <editorArea:attribute qualifier="code"/>
                    <editorArea:attribute qualifier="creationtime" readonly="true"/>
                    <editorArea:attribute qualifier="modifiedtime" readonly="true"/>
                </editorArea:section>
            </editorArea:tab>
        </editorArea:editorArea>
    </context>
</config>

